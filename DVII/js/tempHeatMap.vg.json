{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/sakinahamid/FIT3179/main/DVII/data/temp_change/Temp_Change_Regions.csv"
    },
    "title": "Regional Temperature Change (C) Over Time",
    "width" : 1500,
    "height" : 400,
    "params": [
      {
      "name": "highlight",
      "select": {"type": "point", "on": "mouseover"}
    },
      {"name": "select", "select": "point"}
    ],
    "config": {
        "view": {
            "strokeWidth": 2,
            "step": 13
        },
        "axis": {
            "domain": false
        }
    },
    "mark": {
      "type": "rect",
      "stroke": "black",
      "cursor" : "pointer"
    },
    "encoding": {
        "x": {
            "field": "Year",
            "timeUnit": "year",
            "type": "ordinal",
            "title": "Year",
            "axis": {
                "labelAngle": 0
            }
        },
        "y": {
            "field": "Region",
            "type": "nominal",
            "title": "Region"
        },
        "color": {
            "field": "Temperature Change",
            "aggregate": "average",
            "type": "quantitative",
            "legend": {
                "title": "Temperature Change (C)"
            },
            "scale" : {"scheme" : "yelloworangered"}
        },
        "tooltip" : [
          {"field" : "Region", "type" : "nominal"},
          {"field" : "Year", "type" : "temporal", "format": "%Y"},
          {"aggregate": "average", "field" : "Temperature Change", "type" : "quantitative", "format" : ".2f", "title" : "Temperature Change (C)"}
        ],
        "fillOpacity": {
      "condition": {"param": "select", "value": 1},
      "value": 0.2
      },
      "strokeWidth": {
      "condition": [
        {
          "param": "select",
          "empty": false,
          "value": 2
        },
        {
          "param": "highlight",
          "empty": false,
          "value": 2
        }
      ],
      "value": 0
      }
    }
  }
  