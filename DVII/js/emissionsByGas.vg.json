{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 700,
  "description": "A simple donut chart with embedded data.",
  "data": {
      "url": "https://raw.githubusercontent.com/sakinahamid/FIT3179/main/DVII/data/co2_emissions/Emissions_by_Gas.csv"

  },
  "encoding" :{
    "theta": {"field": "Emission (%)", "type": "quantitative", "stack" : true},
    "color": {
      "field": "Greenhouse Gas",
      "type": "nominal",
      "scale": {
        "domain": [
          "Carbon Dioxide",
          "Methane",
          "Nitrous Oxide",
          "Fluorinated Gases"
          ], 
        "range": [
          "#e41a1c", 
          "#377eb8",
          "#4daf4a",
          "#984ea3"
          ]
      
      }
    }
  },
  "layer" : [
    {
      "params": [
    {
      "name": "highlight",
      "select": {"type": "point", "on": "mouseover"}
    },
    {"name": "select", "select": "point"}
  ],
  "mark": {"type": "arc", "innerRadius": 200, "stroke" : "black"},
  "encoding": {
    "tooltip": [
      {"field": "Greenhouse Gas", "type": "nominal"},
      {"field": "Emission (%)", "type": "quantitative", "format": ".2f"}
    ],
    "fillOpacity": {
      "condition": {"param": "select", "value": 1},
      "value": 0.5
    },
    "strokeWidth": {
    "condition": [
      {
        "param": "select",
        "empty": false,
        "value": 2
      },
      {
        "param": "highlight",
        "empty": false,
        "value": 2
      }
    ],
    "value": 0
  }
  }
    },
     {
    "mark": {"type": "text", "radius": 370},
    "encoding": {
      "text": {"field": "Formula", "type": "nominal"}
    }
  }
  ],
  "config": {
    "view": {
       "stroke": "transparent"
    }
  }
}
